<%- contentFor('css') %>
<link rel="stylesheet" href="/plugins/morris/morris.css">

<%- contentFor('content') %>

<!-- Start content -->
    <div class="content">
      <div class="container">

          <!-- Page-Title -->
          <div class="row">
              <div class="col-sm-12">
                  <div class="page-title-box">
                      <ol class="breadcrumb pull-right">
                          <li><a href="#">Home</a></li>
                          <li class="active">Dashboard</li>
                      </ol>
                      <h4 class="page-title">Welcome !</h4>
                  </div>
              </div>
          </div>

          <div class="row">
                <div class="col-sm-6 col-lg-3">
                  <div class="widget-bg-color-icon card-box">
                      <div class="bg-icon bg-icon-success pull-left">
                          <i class=" ti-wallet text-success"></i>
                      </div>
                      <div class="text-right">
                          <h3 class="text-dark"><b class="counter" id="martCount"><%=numeral(dashboardData.MartCount).format('0,0') %></b></h3>
                          <p class="text-muted">Total Marts</p>
                      </div>
                      <div class="clearfix"></div>
                  </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                  <div class="widget-bg-color-icon card-box fadeInDown animated">
                      <div class="bg-icon bg-icon-primary pull-left">
                          <i class="  ti-pencil text-info"></i>
                      </div>
                      <div class="text-right">
                          <h3 class="text-dark"><b class="counter" id="recruitCount"><%=numeral(dashboardData.RecruitCount).format('0,0') %></b></h3>
                          <p class="text-muted">Total Recruits</p>
                      </div>
                      <div class="clearfix"></div>
                  </div>
              </div>

              <div class="col-sm-6 col-lg-3">
                  <div class="widget-bg-color-icon card-box">
                      <div class="bg-icon bg-icon-danger pull-left">
                          <i class=" ti-headphone-alt text-pink"></i>
                      </div>
                      <div class="text-right">
                          <h3 class="text-dark"><b class="counter" id="resumeCount"><%=numeral(dashboardData.ResumeCount).format('0,0') %></b></h3>
                          <p class="text-muted">Total Resume</p>
                      </div>
                      <div class="clearfix"></div>
                  </div>
              </div>

              <div class="col-sm-6 col-lg-3">
                  <div class="widget-bg-color-icon card-box">
                      <div class="bg-icon bg-icon-purple pull-left">
                          <i class=" ti-user text-purple"></i>
                      </div>
                      <div class="text-right">
                          <h3 class="text-dark"><b class="counter" id="cCount"><%=numeral(dashboardData.ResumeCertCount).format('0,0') %></b></h3>
                          <p class="text-muted">Total Certificate</p>
                      </div>
                      <div class="clearfix"></div>
                  </div>
              </div>

            </div>
      </div>
      <!-- end container -->
  </div>
  <!-- end content -->

 <%- contentFor('script') %>
<!-- Counter Up  -->
<script src="/plugins/waypoints/lib/jquery.waypoints.js"></script>
<script src="/plugins/counterup/jquery.counterup.min.js"></script>
       
<script type="text/javascript">
    $(document).ready(function() {

        $('.counter').counterUp({
                    delay: 100,
                    time: 1200
                });
    });

</script>
