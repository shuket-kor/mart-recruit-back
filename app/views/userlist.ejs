            doGetCallSync("/user/get/" + userseq)
            .success(function(json){
                if (json.result == "success") {
                    $("#USERSEQ").val(json.data.SEQ);
                    $("#USERTYPE").val(json.data.USERTYPE);
                    $("#LOGINID").val(json.data.LOGINID);
                    $("#ACTIVE").val(json.data.ACTIVE);
                    $("#PASSWORD").val(json.data.PWD);
                    $('#userEditModal').modal();
                }
            })
            .fail(function(sender, message, details){
                alert("유저정보를 가져오는 도중에 오류가 발생했습니다.");
                return false;
            });
            
            
