<%- contentFor('css') %>
<link rel="stylesheet" href="/plugins/morris/morris.css" />

<%- contentFor('content') %>

<!-- Start content -->
<div class="content">
    <div class="container">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <ol class="breadcrumb pull-right">
                        <li><a href="#">Home</a></li>
                        <li class="active">사용자 관리</li>
                    </ol>
                    <h4 class="page-title">사용자 조회</h4>
                </div>
            </div>
        </div>
        <table class="table table-hover" style = "background-color:#EEE">
            <tr style = "background-color:#fff">
                <td><font size=2pt><strong><center>SEQ</center></strong></font></td>
                <td><font size=2pt><strong><center>USER_TYPE</center></strong></font></td>
                <td><font size=2pt><strong><center>LOGIN_ID</center></strong></font></td>
                <td><font size=2pt><strong><center>ACTIVE</center></strong></font></td>
                <td><font size=2pt><strong><center>CREATED</center></strong></font></td>
                <td><font size=2pt><strong><center>MODIFED</center></strong></font></td>
                <td><font size=2pt><strong><center>ETC</center></strong></font></td>
            </tr>
            <% list.forEach(item => { %>
            <tr>
                <td><%= item.SEQ %></td>
                <td><%= item.USERTYPE %></td>
                <td><%= item.LOGINID %></td>
                <td><%= item.ACTIVE %></td>
                <td><%= item.CRATED %></td>
                <td><%= item.MODIFED %></td>
                <td style="">
                </li>
                <ul class="list-inline table-action m-0">
                    <a href="#" class="action-icon"><span class="iconify" data-icon="mdi-square-edit-outline" data-inline="false"></span></a>
                    <li class="list-inline-item"> 
                        <li class="list-inline-item"> 
                            <a href="#" class="action-icon"> <span class="iconify" data-icon="fluent:delete-off-20-regular" data-inline="false"></span></a>
                        </ul>
                    </li>
                </td>
            </tr>
            <% }) %>
        </table>
        <div class="row">
            <div class="col-lg-12">
                <%
                if (currentPage > 1) {
                %> 
                    <a href='/list/<%=model.currentPage-1%>'>이전</a> 
                <%    
                }
                if (currentPage < lastPage) {
                %>        
                    <a href='/list/<%=model.currentPage+1%>'>다음</a>   
                <%    
                }
                %> 

            </div>
        </div>
    </div>
    <!-- end container -->
</div>
<!-- end content -->

<%- contentFor('script') %>
<!-- Counter Up  -->
<script src="/plugins/waypoints/lib/jquery.waypoints.js"></script>
<script src="/plugins/counterup/jquery.counterup.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".counter").counterUp({
            delay: 100,
            time: 1200,
        });
    });
</script>
